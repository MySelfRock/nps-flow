# Application
APP_NAME=NPSFlow
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost

# Database
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=npsflow
DB_USERNAME=npsflow
DB_PASSWORD=npsflow_secret

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Mail (configure with your provider)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@npsflow.com
MAIL_FROM_NAME="${APP_NAME}"

# Mailgun (optional)
MAILGUN_DOMAIN=
MAILGUN_SECRET=

# Stripe (optional)
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

# JWT
JWT_SECRET=your-secret-key-here
JWT_TTL=15
JWT_REFRESH_TTL=20160

# Frontend
REACT_APP_API_URL=http://localhost:8000/api
