# Copy this file to terraform.tfvars and fill in your values

# AWS Configuration
aws_region  = "us-east-1"
environment = "production"

# VPC Configuration
vpc_cidr             = "10.0.0.0/16"
availability_zones   = ["us-east-1a", "us-east-1b"]
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.11.0/24"]

# RDS Configuration
db_instance_class    = "db.t3.small"
db_allocated_storage = 20
db_name              = "npsflow"
db_username          = "npsflow_admin"
db_password          = "CHANGE_ME_STRONG_PASSWORD"
db_backup_retention  = 7

# Redis Configuration
redis_node_type       = "cache.t3.micro"
redis_num_cache_nodes = 1

# Backend Configuration
backend_docker_image  = "123456789012.dkr.ecr.us-east-1.amazonaws.com/npsflow-backend:latest"
backend_desired_count = 2
backend_cpu           = 512
backend_memory        = 1024

# Application Secrets (generate these!)
app_key    = "base64:GENERATE_WITH_php_artisan_key:generate"
jwt_secret = "GENERATE_RANDOM_STRING_HERE"

# CORS Configuration
cors_allowed_origins = "https://app.npsflow.com,https://www.npsflow.com"

# SSL Certificates (create in ACM first)
certificate_arn            = "arn:aws:acm:us-east-1:123456789012:certificate/xxxxx"
cloudfront_certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/yyyyy"

# Frontend Configuration
frontend_domain_name = "app.npsflow.com"

# Route53 Configuration (optional)
create_route53_records = false
route53_zone_id        = ""
